{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "src/modules",
  "defaultProject": "sandbox",
  "projects": {
    "sandbox": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "src/sandbox",
      "sourceRoot": "src/sandbox/src",
      "prefix": "sandbox",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/invoice",
            "index": "src/sandbox/src/index.html",
            "main": "src/sandbox/src/main.ts",
            "polyfills": "src/sandbox/src/polyfills.ts",
            "tsConfig": "src/sandbox/tsconfig.app.json",
            "aot": true,
            "assets": [
              "src/sandbox/src/favicon.ico",
              "src/sandbox/src/assets",
              "src/sandbox/src/env.json",
              {
                "glob": "**/*",
                "input": "src/modules/invoice/src/assets",
                "output": "./assets/"
              },
              {
                "glob": "**/*",
                "input": "./node_modules/@pe/sidebar/sidebar-icons",
                "output": "./assets/"
              }
            ],
            "styles": [
              "src/sandbox/src/styles/material.scss",
              "src/sandbox/src/styles/global.scss"
            ],
            "scripts": [],
            "preserveSymlinks": true
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "src/sandbox/src/environments/environment.ts",
                  "with": "src/sandbox/src/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2mb",
                  "maximumError": "5mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb",
                  "maximumError": "10kb"
                }
              ]
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "sandbox:build",
            "port": 4100,
            "aot": true
          },
          "configurations": {
            "production": {
              "browserTarget": "sandbox:build:production"
            }
          }
        }
      }
    },
    "libs.invoice": {
      "root": "src/modules/invoice",
      "sourceRoot": "src/modules/invoice/src",
      "projectType": "library",
      "prefix": "pe-invoice",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "src/modules/invoice/tsconfig.lib.json",
            "project": "src/modules/invoice/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "src/modules/invoice/tsconfig.lib.prod.json"
            }
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "src/modules/invoice/src/test.ts",
            "tsConfig": "src/modules/invoice/tsconfig.spec.json",
            "karmaConfig": "src/modules/invoice/karma.conf.js"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "src/modules/invoice/tsconfig.lib.json",
              "src/modules/invoice/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }
  },
  "schematics": {
    "@schematics/angular:component": {
      "prefix": "peb",
      "style": "scss",
      "changeDetection": "OnPush",
      "skipTests": true
    },
    "@schematics/angular:directive": {
      "prefix": "peb",
      "skipTests": true
    },
    "@schematics/angular:guard": {
      "skipTests": true
    },
    "@schematics/angular:module": {
      "skipTests": true
    },
    "@schematics/angular:pipe": {
      "skipTests": true
    },
    "@schematics/angular:service": {
      "skipTests": true
    }
  },
  "cli": {
    "analytics": "10ae65bd-21de-4a8b-ad64-5ead7cd8a450"
  }
}
