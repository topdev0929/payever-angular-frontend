{
  "extends": "../../../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../../out-tsc/lib",
    "target": "es2015",
    "declaration": true,
    "inlineSources": true,
    "types": [],
    "lib": [
      "dom",
      "es2018"
    ],
    "rootDir": "../../../..",
    "baseUrl": "../../../../src"
  },
  "angularCompilerOptions": {
    "skipTemplateCodegen": true,
    "strictMetadataEmit": true,
    "enableResourceInlining": true,
    "enableIvy": false,

    "fullTemplateTypeCheck": true
  },
  "exclude": [
    "src/test.ts",
    "**/*.spec.ts"
  ]
}
