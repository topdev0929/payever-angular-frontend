{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "types": [
      "node",
      "swiper"
    ],
    "paths": {
      "@pe/checkout": ["src/modules/checkout/src"]
    }
  },
  "exclude": [
    "src/test.ts",
    "**/*.spec.ts",
    "src/finance-express",
    "../node_modules/@pe/checkout-sdk/src/sdk/testing/*.ts",

    "../node_modules/@pe/forms/**/*.spec.ts",
    "../node_modules/@pe/forms/**/*.mock.ts"
  ],
  "include": [
    "./**/*.ts",

    "../node_modules/@pe/forms/**/*.ts",

    "../node_modules/@pe/ui-kit/index.ts",
    "../node_modules/@pe/ui-kit/scss/pe-variables.ts"
  ]
}
